@model AuthorCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4 mb-4 text-center text-primary">Create Author</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger mb-4"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter author's name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname" class="control-label">Surname</label>
                <input asp-for="Surname" class="form-control" placeholder="Enter author's surname" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Birth Date</label>
                <input asp-for="BirthDate" class="form-control" type="date" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label">Gender</label>
                <select asp-for="Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuthorContactCreateVM.PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="AuthorContactCreateVM.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="AuthorContactCreateVM.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuthorContactCreateVM.Email" class="control-label">Email</label>
                <input asp-for="AuthorContactCreateVM.Email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="AuthorContactCreateVM.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Biography" class="control-label">Biography</label>
                <textarea asp-for="Biography" class="form-control" rows="4" placeholder="Write a short biography of the author"></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label">Profile Image</label>
                <input type="file" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group text-center d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary"><i class="fa-regular fa-turn-left"></i> Back to List</a>
                <form asp-controller="Author" asp-action="Create" method="post">
                    <button  class="btn btn-success"><i class="fa-regular fa-plus"></i> Create</button>
                </form>

            </div>

        </form>
    </div>
</div>

<div class="text-center mt-3">
</div>
