@model AuthorDetailVM

@{
    ViewData["Title"] = "Detail";
}

<h1 class="mt-4 mb-4 text-center text-primary font-weight-bold">Author Information</h1>

<div class="card shadow-lg border-0 mb-4">
    <div class="card-body p-5">
        <div class="row mb-4">
            <div class="col-sm-4 d-flex justify-content-center align-items-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Author Image" class="img-fluid rounded-circle shadow-lg border" style="max-width: 220px; border-width: 4px; border-color: #f1f1f1;" />
                }
                else
                {
                    <span class="text-muted">No image available</span>
                }
            </div>
            <div class="col-sm-8">
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Name:</div>
                    <div class="col-sm-9 text-muted">@Model.Name</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Surname:</div>
                    <div class="col-sm-9 text-muted">@Model.Surname</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Birth Date:</div>
                    <div class="col-sm-9 text-muted">@Model.BirthDate?.ToString("dd MMM yyyy")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Gender:</div>
                    <div class="col-sm-9 text-muted">@Model.Gender</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Biography:</div>
                    <div class="col-sm-9 text-muted">@Model.Biography</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Phone Number:</div>
                    <div class="col-sm-9 text-muted">@Model.AuthorContactDetailVM.PhoneNumber</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Email:</div>
                    <div class="col-sm-9 text-muted">@Model.AuthorContactDetailVM.Email</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary btn-lg px-4 py-2 rounded-pill shadow-sm"><i class="fa-regular fa-pen-to-square"></i> Update</a>
    <a asp-action="Index" class="btn btn-secondary btn-lg px-4 py-2 rounded-pill shadow-sm"><i class="fa-regular fa-turn-left"></i> Back</a>
</div>
