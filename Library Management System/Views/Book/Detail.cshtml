@model BookDetailVM

@{
    ViewData["Title"] = "Book Detail";
}

<h1 class="mt-4 mb-4 text-center text-primary font-weight-bold">Book Information</h1>

<div class="card shadow-lg border-0 mb-4">
    <div class="card-body p-5">
        <div class="row mb-4">
            <div class="col-sm-4 d-flex justify-content-center align-items-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Book Image" class="img-fluid rounded-circle shadow-lg border" style="max-width: 220px; border-width: 4px; border-color: #f1f1f1;" />
                }
                else
                {
                    <span class="text-muted">No image available</span>
                }
            </div>
            <div class="col-sm-8">
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Title:</div>
                    <div class="col-sm-9 text-muted">@Model.Title</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Description:</div>
                    <div class="col-sm-9 text-muted">@Model.Description</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Page Count:</div>
                    <div class="col-sm-9 text-muted">@Model.PageCount</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Published Date:</div>
                    <div class="col-sm-9 text-muted">@Model.PublishedDate.ToString("dd MMM yyyy")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Category:</div>
                    <div class="col-sm-9 text-muted">@Model.BookCategoryName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Publisher:</div>
                    <div class="col-sm-9 text-muted">@Model.PublisherName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold text-dark">Authors:</div>
                    <div class="col-sm-9 text-muted">@string.Join(", ", Model.AuthorNames)</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary btn-lg px-4 py-2 rounded-pill shadow-sm">
        <i class="fa-regular fa-pen-to-square"></i> Update
    </a>
    <a asp-action="Index" class="btn btn-secondary btn-lg px-4 py-2 rounded-pill shadow-sm">
        <i class="fa-regular fa-turn-left"></i> Back
    </a>
</div>
